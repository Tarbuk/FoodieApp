<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffffff">
        <!--  Header  Starts-->
            <!-- Logo Start-->
            <ImageView android:src="@drawable/mamiefoodie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp" />
            <!-- Logo Ends -->
        <!--  Header Ends -->
        <!-- Footer Start -->
        <!-- Footer Ends -->

        <!-- Registration Form -->
            <!-- Full Name Label -->
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#372c24"
        android:text="First name"
        android:id="@+id/textView3"
android:layout_below="@id/imageView2"
        />

    <EditText android:id="@+id/reg_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
android:layout_below="@id/textView3"
        />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Last name"
                android:id="@+id/textView2"
android:layout_below="@id/reg_firstname"
                />
            <EditText android:id="@+id/reg_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
android:layout_below="@id/textView2"
/>
            <!--  Email Label -->
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Email"
                android:id="@+id/textView4"
android:layout_below="@id/reg_lastname"
                />

            <EditText android:id="@+id/reg_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_below="@id/textView4"
                />
            <!-- Password Label -->
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Password"
                android:id="@+id/textView"
                android:layout_below="@id/reg_email"
                />

            <EditText android:id="@+id/reg_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:password="true"
                android:singleLine="true"
                android:layout_below="@id/textView"
  />
            <!-- Register Button -->
            <Button android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register account"
                android:layout_below="@+id/reg_password"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"/>
            <!-- Link to Login Screen -->
            <Button
                android:id="@+id/link_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already has account! Login here"
                android:gravity="center"
                android:textSize="20dip"
                android:textColor="#025f7c"
                android:layout_marginTop="42dp"
                android:layout_below="@+id/btnRegister"
android:layout_centerInParent="true"/>
    </RelativeLayout>

        <!-- Registration Form Ends -->
</ScrollView>
